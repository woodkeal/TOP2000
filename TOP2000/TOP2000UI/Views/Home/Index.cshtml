@model IEnumerable<TOP2000UI.ViewModels.Top2000ViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Jaar)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ArtiestNaam)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Jaar)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ArtiestNaam)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.songid">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.songid">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.songid">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
